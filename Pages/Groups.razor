@page "/Groups"

<div class="mb-2 mx-2 d-flex justify-content-between">
    <div>
        <h1>Groups</h1>
    </div>
    <div>
        <button @onclick="NavigateToCreateGroup" class="btn btn-primary">Create New</button>
    </div>
    @* <div class="text-right"> *@
    @*   <a class="btn btn-lg btn-primary" routerLink="/groups/create">New Group</a> *@
    @* </div> *@
</div>

@if (GroupList is null)
{
    <h2>Loading...</h2>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (GroupDto group in GroupList)
            {
                <tr>
                    <td>@group.Id</td>
                    <td>@group.Name</td>
                    <td style="width:6%">
                        <button class="btn btn-info" @onclick="() => NavigateToUpdateGroup(group.Id)">Update</button>
                        @* <button class="btn btn-info" routerLink="/groups/update/{{group.id}}">Update</button> *@
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}