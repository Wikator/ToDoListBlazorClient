@page "/groups/{id:int}"

<h3>Update Group</h3>

@if (Group is null)
{
    if (GetErrorMessage is null)
    {
        <p>Loading...</p>
    }
    else
    {
        <p>@GetErrorMessage</p>
    }
}
else
{
    @if (PutErrorMessage is not null)
    {
        <div class="alert alert-danger" role="alert">
            @PutErrorMessage
        </div>
    }
    <EditForm Model="Group" OnSubmit="HandleSubmit">
        <DataAnnotationsValidator />
        <TextInputField @bind-Value="Group.Name" ValidationFor="@(() => Group.Name)"></TextInputField>

        <button type="submit" class="btn btn-primary mt-2">Update</button>
    </EditForm>
}